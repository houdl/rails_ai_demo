<%= form_with model: [chat, message], local: false,
              class: "d-flex gap-2",
              id: "message-form",
              data: { controller: "message-form" } do |form| %>
  <%= form.text_area :content,
                    class: "form-control",
                    placeholder: "输入您的消息...",
                    rows: 2,
                    required: true,
                    data: {
                      "message-form-target": "textarea",
                      action: "keydown->message-form#handleKeydown"
                    } %>
  <%= form.submit "发送",
                 class: "btn btn-primary",
                 data: { "message-form-target": "submit" } %>
<% end %>
